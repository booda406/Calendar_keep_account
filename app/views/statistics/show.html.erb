<div class="page-header">
  <h1>報表統計</h1>
</div>

<%= form_tag statistics_path, :method => :get do %>
    客戶名稱：<%= text_field_tag "name" %>
    <br/>
    日期範圍：
    <%= text_field_tag "start_date", nil, class: "datepicker form-control" %>
    ～<%= text_field_tag "end_date", nil, class: "datepicker" %>
  <%= submit_tag "Search" %>
<% end %>

<% if !@statistics.nil? %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>客戶名稱</th>
      <th>產品名稱</th>
      <th>數量</th>
    </tr>
  </thead>
  <tbody>
    <% @statistics.each do |category, count| %>
      <tr>
        <td><%= @company.name %></td>
        <td><%= category %></td>
        <td><%= count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<script type="text/javascript">
  $('.datepicker').datepicker();
</script>