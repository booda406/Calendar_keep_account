<%= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  
  <div class="control-group">
    <div class="controls">
      <%= f.input :company_id, :label => :客戶, :collection => Company.all, prompt: "Choose a company" %>
    </div>
  </div>  
  <div class="control-group">
    <div class="controls">
    <%= f.input :category_id, :label => :產品, :collection => Category.all, prompt: "Choose a category" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :數量, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :capacity, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :單價, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :univalent, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :總價, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sum, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :date_time, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                :back, :class => 'btn' %>
  </div>
<% end %>

<script>
if ($("#event_company_id").change(['1','2','5','6','7','8','9','10'])) {
$("#event_name").val("玄聖殿","sai");
};
</script>
