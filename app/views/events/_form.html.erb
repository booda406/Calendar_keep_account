<%= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  
  <div class="control-group">
    <div class="controls">
      <%= f.input :name, :collection => Company.all, prompt: "Choose a company" %>
      <!--<%= f.association :company, collection: Company.all(order: 'name'), prompt: "Choose a Company" %>-->
    </div>
  </div>
  <div class="control-group">
    <!--<%= f.label :description, :class => 'control-label' %>-->
    <div class="controls">
      <!--<%= f.text_field :description, :class => 'text_field' %>-->
    <%= f.input :description, collection: Category.all, prompt: "Choose a category" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :capacity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :capacity, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :univalent, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :univalent, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sum, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sum, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :date_time, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                :back, :class => 'btn' %>
  </div>
<% end %>
