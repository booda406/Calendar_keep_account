<h1>Listing 廟宇</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= link_to "修改", edit_company_path(company) %></td>
        <td><%= link_to '刪除', edit_company_path(company), method: :delete, data: { confirm: '你確定嗎?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= form_for(@company, :url => company_path) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

